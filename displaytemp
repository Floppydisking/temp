import adafruit_sht31d
import board
from inky.auto import auto
from PIL import ImageFont, Image, ImageDraw
from font_fedoka_one import '/usr/share/fonts/truetype/liberation'
from time import ctime, sleep

display = auto()
display.set_border(display.RED)

img = Image.new('P', (display.WIDTH, display.HEIGHT))
draw = ImageDraw.Draw(img)

font = ImageFont.truetype('/usr/share/fonts/truetype/liberation', 22)

message = "Hello, World"
w, h = font.getsize(message)
x = (display.WIDTH / 2) - (w / 2)
y = (display.HEIGHT / 2) - (w / 2)

draw.text((x, y), message, display.RED, font)
display.set_image(img)
display.show()


i2c = board.I2C()

sensor = adafruit_sht31d.SHT31D(i2c)

temp_list = []
rh_list = []

hour_temp = []
"""List of the temp at the start of the hour"""
hour_rh = []
"""List of the relative humidity at the start of the hour"""


def main():
    curr = ctime()
    file = f'{curr}.txt'
    f = open(file, 'w')
    while True:
        tempc = round(sensor.temperature, 2)
        tempf = round((tempc * 9/5) + 32, 2)
        rh = round(sensor.relative_humidity,2)
        curr = ctime()
        print(curr)
        print(f"{tempf}째F  -----  {tempc}째C")
        #print(f'{rh} RH')
        
        if len(temp_list) < 12:
            temp_list.append(tempf)
        else:
            hr = temp_list.pop(0)
            hour_temp.append(hr)
            print(hour_temp)
            temp_list.clear()
        
        if len(rh_list) < 12:
            rh_list.append(rh)
        else:
            hrh = rh_list.pop(0)
            hour_rh.append(hrh)
            print(hour_rh)
            rh_list.clear()
            
        if len(hour_temp) == 24:
            o = str(hour_temp)
            p = str(hour_rh)
            f.write(f"""
Hourly Temperatures:
{o}

Hourly Relative Humidity:
{p}""")
            f.close()
            file = f'{curr}.txt'
            f = open(file, 'w')
            hour_temp.clear()
            hour_rh.clear()
            
        
        
        print(temp_list)
        print(rh_list)
        sleep(300)
        
    
        



#print(f"{tempf}째F  -----  {tempc}째C")
#print(f'{rh} RH')
        
main()
